{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Exchange cryptocurrency trading platform",
        "title": "Exchange API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:7000",
    "basePath": "/v1",
    "paths": {
        "/auth/login": {
            "post": {
                "description": "احراز هویت کاربر با ایمیل، رمز عبور و کپچا. در صورت فعال بودن 2FA، ارسال کد تایید دو عاملی",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "ورود کاربر",
                "parameters": [
                    {
                        "description": "اطلاعات ورود همراه کپچا",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "ورود موفق بدون 2FA",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "202": {
                        "description": "کد 2FA ارسال شد، منتظر تایید باشید",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "400": {
                        "description": "بدنه درخواست یا کپچا نامعتبر",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "401": {
                        "description": "اطلاعات ورود یا کپچا اشتباه",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "500": {
                        "description": "خطای داخلی سرور",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "Revoke access token and end user session",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "User logout",
                "responses": {
                    "200": {
                        "description": "Logout successful",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "400": {
                        "description": "Bad request or missing authorization",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "401": {
                        "description": "Unauthorized or invalid token",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/auth/refresh": {
            "post": {
                "description": "Generate new access token using refresh token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Refresh access token",
                "parameters": [
                    {
                        "description": "Refresh token info",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.RefreshTokenRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Token refreshed successfully",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "400": {
                        "description": "Invalid request body",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "401": {
                        "description": "Unauthorized or expired token",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/auth/register": {
            "post": {
                "description": "ایجاد حساب کاربری جدید با ایمیل، نام کامل، رمز عبور و اعتبارسنجی کپچا",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "ثبت نام کاربر",
                "parameters": [
                    {
                        "description": "اطلاعات ثبت‌نام شامل کپچا",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.RegisterRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "ثبت‌نام موفق",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "400": {
                        "description": "بدنه درخواست نامعتبر یا کپچا اشتباه",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "409": {
                        "description": "کاربر قبلا ثبت شده",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "500": {
                        "description": "خطای داخلی سرور",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/auth/verify-2fa": {
            "post": {
                "description": "Verify 2FA code sent via email or SMS during login or registration",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "auth"
                ],
                "summary": "Verify 2FA code",
                "parameters": [
                    {
                        "description": "2FA code verification info",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Verify2FARequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "2FA verification successful, tokens issued",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "400": {
                        "description": "Invalid request body",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "401": {
                        "description": "Invalid or expired 2FA code",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/captcha": {
            "get": {
                "description": "Generates a captcha image and returns it along with a unique request_id.",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "captcha"
                ],
                "summary": "Generate captcha image",
                "responses": {
                    "200": {
                        "description": "JSON response with request_id and base64 captcha string.",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "500": {
                        "description": "Failed to generate or store captcha",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/captcha/verify": {
            "post": {
                "description": "Verify user input against the stored captcha text.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "captcha"
                ],
                "summary": "Verify captcha input",
                "parameters": [
                    {
                        "description": "Captcha verification info",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/internal_delivery_handler.VerifyRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Captcha is valid",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "400": {
                        "description": "Invalid request body or captcha not found",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "401": {
                        "description": "Invalid captcha input",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/currencies": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "دریافت لیست تمام ارزهای فعال موجود در سیستم",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "currency"
                ],
                "summary": "لیست ارزها",
                "responses": {
                    "200": {
                        "description": "لیست ارزها",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "500": {
                        "description": "خطای داخلی سرور",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/health": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "چک سلامت اتصال به دیتابیس و وضعیت کلی سرور",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "بررسی سلامت سرویس",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "503": {
                        "description": "Service Unavailable",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    }
                }
            }
        },
        "/wallets": {
            "get": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "دریافت لیست کیف پول‌های یک کاربر",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "wallet"
                ],
                "summary": "لیست کیف پول‌ها",
                "parameters": [
                    {
                        "type": "string",
                        "description": "شناسه کاربر",
                        "name": "user_id",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "لیست کیف پول‌ها",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "400": {
                        "description": "درخواست نامعتبر",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "500": {
                        "description": "خطای داخلی سرور",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/wallets/deposit": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "واریز مبلغ مشخص به کیف پول یک کاربر",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "wallet"
                ],
                "summary": "واریز به کیف پول",
                "parameters": [
                    {
                        "type": "string",
                        "description": "شناسه کیف پول",
                        "name": "wallet_id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "اطلاعات واریز",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.WalletDepositRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "واریز موفق",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "400": {
                        "description": "درخواست نامعتبر",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "403": {
                        "description": "دسترسی غیرمجاز",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "404": {
                        "description": "کیف پول پیدا نشد",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "500": {
                        "description": "خطای داخلی سرور",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        },
        "/wallets/{wallet_id}/withdraw": {
            "post": {
                "security": [
                    {
                        "BearerAuth": []
                    }
                ],
                "description": "برداشت مبلغ مشخص از کیف پول یک کاربر",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "wallet"
                ],
                "summary": "برداشت از کیف پول",
                "parameters": [
                    {
                        "type": "string",
                        "description": "شناسه کیف پول",
                        "name": "wallet_id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "اطلاعات برداشت",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.WalletWithdrawRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "برداشت موفق",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.Response"
                        }
                    },
                    "400": {
                        "description": "درخواست نامعتبر",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "403": {
                        "description": "دسترسی غیرمجاز",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "404": {
                        "description": "کیف پول پیدا نشد",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    },
                    "500": {
                        "description": "خطای داخلی سرور",
                        "schema": {
                            "$ref": "#/definitions/Exchange_internal_model.ErrorResponseStruct"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Exchange_internal_model.ErrorResponseStruct": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "error": {
                    "description": "پیام فنی (developer-friendly)",
                    "type": "string"
                },
                "error_code": {
                    "description": "کد خطای اختصاصی (مثلاً validation_error)",
                    "type": "string"
                },
                "message": {
                    "description": "پیام کاربر (user-friendly)",
                    "type": "string"
                },
                "success": {
                    "type": "boolean"
                }
            }
        },
        "Exchange_internal_model.LoginRequest": {
            "type": "object",
            "required": [
                "captcha_ans",
                "captcha_id",
                "email",
                "password"
            ],
            "properties": {
                "captcha_ans": {
                    "type": "string",
                    "example": "aBc123"
                },
                "captcha_id": {
                    "type": "string",
                    "example": "9f1b77d3-cb13-4a72-8a64-28de5f82a5c2"
                },
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                },
                "password": {
                    "type": "string",
                    "example": "P@ssw0rd123"
                }
            }
        },
        "Exchange_internal_model.RefreshTokenRequest": {
            "type": "object",
            "required": [
                "refresh_token"
            ],
            "properties": {
                "refresh_token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                }
            }
        },
        "Exchange_internal_model.RegisterRequest": {
            "type": "object",
            "required": [
                "captcha_ans",
                "captcha_id",
                "email",
                "full_name",
                "password"
            ],
            "properties": {
                "captcha_ans": {
                    "type": "string",
                    "example": "aBc123"
                },
                "captcha_id": {
                    "type": "string",
                    "example": "9f1b77d3-cb13-4a72-8a64-28de5f82a5c2"
                },
                "email": {
                    "type": "string",
                    "example": "user@example.com"
                },
                "full_name": {
                    "type": "string",
                    "example": "Ali Rezaei"
                },
                "password": {
                    "type": "string",
                    "minLength": 8,
                    "example": "P@ssw0rd123"
                }
            }
        },
        "Exchange_internal_model.Response": {
            "type": "object",
            "properties": {
                "code": {
                    "description": "HTTP status code",
                    "type": "integer"
                },
                "data": {
                    "description": "داده (در صورت موفقیت)"
                },
                "error_code": {
                    "description": "کد یکتا برای خطا (اختیاری)",
                    "type": "string"
                },
                "message": {
                    "description": "پیام (موفق یا خطا)",
                    "type": "string"
                },
                "success": {
                    "description": "وضعیت موفقیت",
                    "type": "boolean"
                }
            }
        },
        "Exchange_internal_model.Verify2FARequest": {
            "type": "object",
            "required": [
                "code",
                "user_id"
            ],
            "properties": {
                "code": {
                    "type": "string"
                },
                "user_id": {
                    "type": "string"
                }
            }
        },
        "Exchange_internal_model.WalletDepositRequest": {
            "type": "object",
            "required": [
                "amount",
                "currency_id",
                "user_id"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                },
                "currency_id": {
                    "type": "string"
                },
                "user_id": {
                    "type": "string"
                }
            }
        },
        "Exchange_internal_model.WalletWithdrawRequest": {
            "type": "object",
            "required": [
                "amount",
                "user_id"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                },
                "user_id": {
                    "type": "string"
                }
            }
        },
        "internal_delivery_handler.VerifyRequest": {
            "type": "object",
            "required": [
                "request_id",
                "user_input"
            ],
            "properties": {
                "request_id": {
                    "type": "string"
                },
                "user_input": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "BearerAuth": {
            "type": "apiKey",
            "name": "Authorization",
            "in": "header"
        }
    }
}